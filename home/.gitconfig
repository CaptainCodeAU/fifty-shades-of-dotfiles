# ==============================================================================
#  Global Git Configuration (generic / shareable)
# ==============================================================================
# This is a public-safe template managed by GNU Stow. Personal info (name,
# email, signing keys) lives in a separate private file that is NOT committed:
#
#   ~/.gitconfig.private
#
# Create it with:
#   [user]
#       name = Your Name
#       email = you@example.com
#
# The [include] below loads it automatically. The file is protected by
# .gitignore_global so it will never be accidentally committed.

[include]
	path = ~/.gitconfig.private

[credential]
	helper = osxkeychain

[credential "https://github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential

[color]
	ui = auto

[init]
	defaultbranch = master

[pull]
	ff = only

[push]
	autoSetupRemote = true

[core]
	excludesfile = ~/.gitignore_global
	editor = cursor --wait

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[diff]
	colorMoved = default

[merge]
	conflictstyle = diff3

[rerere]
	enabled = true
